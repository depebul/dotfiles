macos_option_as_alt yes
map cmd+left  send_text all \x01
map cmd+right send_text all \x05
map cmd+backspace send_text all \x15 
map cmd+up    send_text all \x10
map cmd+down  send_text all \x0e
map alt+left  send_text all \eb
map alt+right send_text all \ef
include ~/.config/kitty/kitty-themes/themes/TokyoNight.conf

# BEGIN_KITTY_THEME
# Tokyo Night
include current-theme.conf
# END_KITTY_THEME

# font config
# font_family      "MesloLGS Nerd Font"
# bold_font        auto
# italic_font      auto
# bold_italic_font auto
font_size        12.0
disable_ligatures never
# pretty blur for macOS
background_opacity 0.85
background_blur 50
# nice padding
window_padding_width 10
# copy on select
copy_on_select yes
# url opening
open_url_with default
url_color #73daca
underline_links always
# tab bar
tab_bar_style powerline
tab_powerline_style slanted
tab_activity_symbol none
tab_title_template "{index}:{title}"


# BEGIN_KITTY_FONTS
font_family      family="MesloLGS Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS